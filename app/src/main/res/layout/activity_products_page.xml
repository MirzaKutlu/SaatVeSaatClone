<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.categories.CategoriesPageActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="141dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/saatlogo" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvClocksProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSortProducts"
        tools:listitem="@layout/card_view_categories" />

    <TextView
        android:id="@+id/txtCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Saat Kategorileri"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btnSortProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_page_start"
        android:text="Button"
        app:layout_constraintStart_toStartOf="@+id/rcvClocksProducts"
        app:layout_constraintTop_toBottomOf="@+id/txtCategory" />

    <ImageButton
        android:id="@+id/btnToggleList"
        android:layout_width="@dimen/login_page"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_list"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/btnSortProducts"
        app:layout_constraintEnd_toStartOf="@+id/btnToggleGrid"
        app:layout_constraintTop_toTopOf="@+id/btnSortProducts" />

    <ImageButton
        android:id="@+id/btnToggleGrid"
        android:layout_width="@dimen/login_page"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_grid"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/btnToggleList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnToggleList" />


</androidx.constraintlayout.widget.ConstraintLayout>